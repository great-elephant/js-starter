{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "removeComments": false,
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
    ],
    "lib": [
      "es7"
    ],
    "moduleResolution": "node"
  },
  "includes": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}